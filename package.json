{
  "name": "@yungas/svelte-rxflux",
  "version": "0.1.0",
  "description": "A flux-like store for Svelte based on RxJS Observables.",
  "files": [
    "dist"
  ],
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "svelte": "src/components",
  "scripts": {
    "build": "pnpm run compile && terser --compress --mangle -o dist/index.js -- dist/index.js && cpy './src/components/*.svelte' './dist/components/'",
    "compile": "rimraf ./dist && tsc --project tsconfig.prod.json --skipLibCheck",
    "start:dev": "nodemon",
    "start": "pnpm run build && node dist/index.js",
    "lint": "eslint . --ext .ts",
    "fix": "eslint --fix . --ext .ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "np": "np"
  },
  "husky": {
    "hooks": {
      "pre-push": "pnpm run test && pnpm run fix && pnpm run lint"
    }
  },
  "keywords": [
    "svelte",
    "flux",
    "rxjs",
    "store",
    "reactive",
    "state management",
    "hooks",
    "redux"
  ],
  "author": "Gustavo Konrad",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.20.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "np": "^7.5.0",
    "rimraf": "^3.0.2",
    "terser": "^5.6.0",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "rxjs": "^6",
    "svelte": "^3.41.0"
  }
}
