{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "es6",
    "lib": ["es6"],
    "allowJs": false,
    "outDir": "dist", 
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
